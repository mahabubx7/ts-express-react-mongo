{
  "name": "api",
  "version": "1.0.0",
  "description": "api-express",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "dev": "node -r dotenv/config -r ts-node/register ./src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/main.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.10",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@mx7/tenv": "^1.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongoose": "^8.3.4",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "yarn dev"
  }
}
